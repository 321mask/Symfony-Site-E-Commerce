{% extends 'base.html.twig' %}

{% block title %}Compte - Changer de mots de passe
{% endblock %}

{% block body %}
	<h1>Modification du mot de passe</h1><br><hr>

	{{ form_start(form) }}

	{{form_row(form.firstName)}}

	{{form_row(form.lastName)}}

	{{ form_row(form.email) }}

	{{ form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Entrez votre ancien mot de passe"}}) }}

	{{ form_row(form.newPassword,{'label':false,'attr':{'placeholder':"Entrez votre nouveau mot de passe"}}) }}

	{{ form_row(form.confirmNewPassword,{'label':false,'attr':{'placeholder':"Confirmer votre nouveau mot de passe"}}) }}

	{{ form_end(form) }}


{% endblock %}
